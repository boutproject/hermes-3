nout = 50
timestep = 0.1


[mesh]

extrapolate_y = false 

[mesh:paralleltransform]
type = fci


[solver]
mxstep = 10000
rtol = 1e-8
atol = 1e-12
mms = true  # Run with MMS sources and output diagnostics
mms_initialise = true
[hermes]
components = h+


Nnorm = 1e18
Bnorm = 1
Tnorm = 5

[h+]  # Ions
type = evolve_density, evolve_pressure, evolve_momentum
charge = 1.0
AA = 1.0
thermal_conduction = false  # in evolve_pressure
p_div_v = true
mms = true
diagnose = true



[Nh+]

solution = 0.1*sin(2.0*y) + 1

source = 2.2847e-5*cos(y)



[Ph+]

solution = 0.1*cos(3.0*y) + 1

source = 0

disable_ddt = true



[NVh+]

solution = 0.1*sin(y)

source = 0

disable_ddt = true
