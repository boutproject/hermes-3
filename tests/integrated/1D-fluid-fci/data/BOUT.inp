nout = 50
timestep = 0.1


[mesh]

extrapolate_y = false 

[mesh:paralleltransform]
type = fci


[solver]
mxstep = 10000
rtol = 1e-7
atol = 1e-12
mms = true  # Run with MMS sources and output diagnostics
mms_initialise = true
cvode_max_order = 3

[hermes]
components = h+


Nnorm = 1e18
Bnorm = 1
Tnorm = 5

[h+]  # Ions
type = evolve_density, evolve_pressure, evolve_momentum
charge = 1.0
AA = 1.0
thermal_conduction = false  # in evolve_pressure
p_div_v = true
mms = true
diagnose = true


[Nh+]

solution = 0.1*sin(2.0*y) + 1

source = 2.2847e-5*cos(y)


[Ph+]

solution = 0.1*cos(3.0*y) + 1

source = 0.00022847*(0.1*cos(y)/(0.1*sin(2.0*y) + 1) - 0.02*sin(y)*cos(2.0*y)/(0.1*sin(2.0*y) + 1)^2)*(0.0666666666666667*cos(3.0*y) + 0.666666666666667) + 2.2847e-5*(0.1*cos(3.0*y) + 1)*cos(y)/(0.1*sin(2.0*y) + 1) - 6.8541e-6*sin(y)*sin(3.0*y)/(0.1*sin(2.0*y) + 1) - 4.5694e-6*(0.1*cos(3.0*y) + 1)*sin(y)*cos(2.0*y)/(0.1*sin(2.0*y) + 1)^2

[NVh+]

solution = 0.1*sin(y)

source = -6.8541e-5*sin(3.0*y) + 4.5694e-6*sin(y)*cos(y)/(0.1*sin(2.0*y) + 1) - 4.5694e-7*sin(y)^2*cos(2.0*y)/(0.1*sin(2.0*y) + 1)^2

isMMS = true