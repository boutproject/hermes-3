nout = 0
timestep = 100.0
MYG=1
MXG=2
NXPE=1

[solver]
type = cvode
use_precon = true
mxstep = 1e5

mxorder = 3
atol = 1e-12
rtol = 1e-10

[hermes]
components = (d+, d, e)

Nnorm = 1e19  # Reference density [m^-3]
Bnorm = 1   # Reference magnetic field [T]
Tnorm = 75   # Reference temperature [eV]
recalculate_metric = false

################################################################
# Ions

[d+]
type = fixed_density, fixed_velocity, fixed_temperature

AA = 2
charge = 1
density = 1.0
velocity = 0.0
temperature = 1.0
diagnose = true

#################################################################
## Electrons
[e]
type = fixed_density, fixed_velocity, fixed_temperature
AA = 1/1836
charge = -1
density = 1.0
velocity = 0.0
temperature = 1.0
diagnose = true

